<html>
  <head>
    <title>Your Dashboard: CherimoyaBnB</title>
    <link rel="shortcut icon" href="/images/favicon.ico">
    <link rel="stylesheet" type="text/css" href="/stylesheets/styles.css">
  </head>
  <body class="dashboard">
    <div class="nav">
    <!-- <nav> -->
        <!-- <img style="width: 80px; float: left;" src='/images/cherimoya.png'> -->
        <p style="color: green;">Dashboard</p>
        <a class="listingNav" href="/createlisting"><p>Listings</p></a>
        <a class="bookingNav" href="/makebooking?space_id=1"><p>My Bookings</p></a>
        <a class="requestNav" href="/requests"><p>Requests</p></a>
        <a class="signupNav" href="/logout"><p>Log out</p></a>
    </div>

    <hr>

    <div class="left">
    <div class="logo">
        <!-- <img class=“logo” src='/images/cherimoya.png'> -->
        <a href="/about"><img style="width: 80px;" src='/images/cherimoya.png'></a>
    </div><br><br>
    <h1>Welcome back to CherimoyaBnB, <%= @user_name %>!</h1>
    <!-- <input type="text" name="available_from"> -->
    <!-- <input type="text" name="available_to"> -->
    <div class="filter"><p style="color: rgb(255, 255, 255); margin: 1px;">Filter spaces:</p><form action="/dashboard" method="POST">Available from:<input type="date" name="available_from" onfocus="this.showPicker()">
        Available to:<input type="date" name="available_to" onfocus="this.showPicker()">
        Maximum price per night £<input type="text" name="max_price">
        <input type="submit" value="Filter">&ensp;<form action="/dashboard" method="GET"><input type="submit" value="Reset"></form>
    </form></div>
    <p> </p>

    <%if not @spaces.nil?%>
        <% @spaces.map do |space| %>
        <div class="space_wrapper">
        <!-- <span class="link"></span> -->
            <p class="space_name"><%= space.name %></p>
            <p class="space_name">Price per night: £<%= space.price_per_night %></p>
            <form action="/makebooking" method="GET">
                <input type='hidden' name='space_id' value='<%=space.id%>'/>
                <input type='submit' value='Book now'/>
            </form>
        </div>
        <%end%>
    <%end%>

    <%if not @filtered_spaces.nil?%>
        <%@filtered_spaces.map do |space|%>
        <div class="space_wrapper">
        <span class="link"></span>
            <p class="space_name"><%= space.name %></p>
            <p class="space_name">Price per night: £<%= space.price_per_night %></p>

            <form action="/makebooking" method="GET">
                <input type='hidden' name='space_id' value='<%=space.id%>'/>
                <input type='submit' value='Book now'/>
            </form>

        </div>
        <%end%>
    <%end%>
    <div class="pages_scroller"><h4 style="text-align: center;">Page 1 / 1</h4></div>
    </div>
    <div class="right"></div>
  </body>
</html>
