<html>
  <head>
    <title>Your Dashboard: CherimoyaBnB</title>
    <link rel="shortcut icon" href="/images/favicon.ico">
    <link rel="stylesheet" type="text/css" href="/stylesheets/styles.css">
    <style>
      .nav{
            display: flex;
            justify-content: space-evenly;
            margin: 50px 50px;
            text-align: center;
        }
        h1{
            text-align: center;
        }
        .filter{
            margin: auto;
            padding: 10px;
        }
        .space_wrapper{
            margin: auto;
            padding: 10px;
        }
        body{
            font-family: sans-serif;
            font-size: 22px;
        }
        
        a{
            text-decoration: none!important;
            color: black;
        
        }
        
        a:hover{
            transition: ease-in-out;
            color: green;
        }
        
    </style>
  </head>
  <body class="dashboard">
    <nav class="nav">
            <a class="listingNav" href="/createlisting">Listings</a>
            <a class="bookingNav" href="/makebooking?space_id=1">My Bookings</a>
            <a class="requestNav" href="/requests">Requests</a>
            <a class="signupNav" href="/logout">Log out</a>
    </nav>

    <!-- !! The above may conflict !! -->
    
    <hr>
        <h1>Welcome back to CherimoyaBnB, <%= @user_name %>!</h1>
       
        <div class="filter">
            <form action="/dashboard" method="POST">
                Available from:<input type="text" name="available_from">
                Available to:<input type="text" name="available_to">
                Maximum price per night:<input type="text" name="max_price">
                <input type="submit" value="Filter">
            </form></div>
        <%if not @spaces.nil?%>
            <% @spaces.map do |space| %>
            <div class="space_wrapper">
                <!-- <span class="link"></span> -->
                    <p class="space_name"><%= space.name %></p>
                    <p class="space_name">Price per night: £<%= space.price_per_night %></p>
                    <form action="/makebooking" method="GET">
                        <input type='hidden' name='space_id' value='<%=space.id%>'/>
                        <input type='submit' value='Book now'/>
                    </form>
            </div>
        <%end%>
        <%end%>

        <%if not @filtered_spaces.nil?%>
            <%@filtered_spaces.map do |space|%>
            <div class="space_wrapper">
            <span class="link"></span>
                <p class="space_name"><%= space.name %></p>
                <p class="space_name">Price per night: £<%= space.price_per_night %></p>

                <form action="/makebooking" method="GET">
                    <input type='hidden' name='space_id' value='<%=space.id%>'/>
                    <input type='submit' value='Book now'/>
                </form>

            </div>
            <%end%>
        <%end%>
    <div class="pages_scroller"><h4 style="text-align: center;">Page 1 / 1</h4></div>
    </div>
    <div class="right"></div>
  </body>
</html>
