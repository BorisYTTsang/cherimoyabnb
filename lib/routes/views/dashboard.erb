<html>
  <head></head>
  <body>
    <h1>Welcome, <%= @user_name %>!</h1>
    <h1>Dashboard</h1>
    <p><a href="/logout">Log out</a> | <a href="/requests">Requests</a> | <a href="/createlisting">Create a listing</a> </p>

      <p>Available:</p>
      <div>Filter:<form action="/dashboard" method="POST">
                    Available from:<input type="text" name="available_from">
                    Available to:<input type="text" name="available_to">
                    Maximum price per night:<input type="text" name="max_price">

                    <input type="submit" value="Filter">
                  </form>
      </div>
      
      <br>
      
      <%if not @spaces.nil?%>
        <%@spaces.map do |space|%>
          <div><%=space.name%>
              <p>Price per night: £<%=space.price_per_night%></p>
              <form action="/makebooking" method="GET">
                <input type='hidden' name='space_id' value='<%=space.id%>'/>
                <input type='submit' value='Book now'/>
              </form>
          </div>
        <%end%>
      <%end%>

      <%if not @filtered_spaces.nil?%>
        <%@filtered_spaces.map do |space|%>
          <div><%=space.name%>
              <p>Price per night: £<%=space.price_per_night%></p>
              <form action="/makebooking" method="GET">
                <input type='hidden' name='space_id' value='<%=space.id%>'/>
                <input type='submit' value='Book now'/>
              </form>
          </div>
        <%end%>
      <%end%>

  </body>
</html>
